<div id="TodayUS" class="tabcontent">
    <h2 style="text-align: center">NYT's U.S. News</h2>
    <p style="text-align: center">Just click "Show Full Article" and enjoy!</p>
    <div class="container">
	<% nytUS.forEach(function(item, index) { %>
	    <div class="card">
		<div class="card-body">
		    <h4 class="card-title"><%= item.title %></h4>
		    <hr>
		    <p class="card-text"><%= item.description %></p>
		    <hr>
		    <p class="card-text">Published on: <%= item.date %></p>
		    <hr>
		    <button id="articleBtn" class="btn" onclick="document.getElementById('todayUSModal<%= index %>').style.display='block'">Show Full Article</button>
		</div>
	    </div>
	    <div id="todayUSModal<%= index %>" class="art-modal">
		<div class="art-modal-content">
		    <span class="close" onclick="document.getElementById('todayUSModal<%= index %>').style.display='none'">&times;</span>
		    <div class="art-modal-text">
			<h1><%= item.title %></h1>
			<hr>
			<p><%= item.full_article %></p>
		    </div>
		</div>
	    </div>
	<% }); %>
    </div>
</div>

